@model IEnumerable<WebBanHang.EFF.products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Backend/Dashboard/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class ="btn btn-primary"})
</p>
<table class="table">
    <tr>
        <th>
          Ảnh đại diện
        </th>

        <th>
            Mã Sản Phẩm
        </th>
        <th>
            Tên Sản Phẩm
        </th>
        <th>
           Chi tiết 
        </th>
        <th>
            Giá niêm yết
        </th>
        <th>
            List Price
        </th>
        <th>
           Target Level
        </th>
        <th>
           Reorder Level
        </th>
        <th>
            Minium Reorder Quantity
        </th>
        <th>
         Quantity Per Unit
        </th>
        <th>
            Discontinued
        </th>
        <th>
          Category
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @if (String.IsNullOrEmpty(item.image))
        {
            <img class="bd-placeholder-img card-img-top" width="100%" height="150" style="width:150px" src="~/Content/Images/no-photo.png">
        }
        else
        {
            <img class="bd-placeholder-img card-img-top" width="100%" height="150"  style="width:150px" src="~/UploadedFiles/ProductImages/@item.image">
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.product_code)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.product_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.standard_cost)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.list_price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.target_level)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.reorder_level)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.minimum_reorder_quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.quantity_per_unit)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.discontinued)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.category)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Details", "Details", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })
    </td>
</tr>
}

</table>
